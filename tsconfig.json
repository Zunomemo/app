{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleDetection": "force",
        "strict": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "types": [
            "vite/client",
            "unplugin-vue-router/client"
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "vite.*.ts",
        "forge.*.ts",
        "auto-imports.d.ts",
        "vue-shim.d.ts",
        "forge.config.cts"    
    ]
}
