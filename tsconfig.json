{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": ["es5", "es6", "DOM", "DOM.Iterable"],
        "types": [
            "vite/client",
            "unplugin-vue-router/client"
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
